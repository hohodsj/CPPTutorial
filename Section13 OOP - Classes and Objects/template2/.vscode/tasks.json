{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "some tasks",
            "command": "/usr/bin/g++",
            "args": [
                "-Wall",
                "-std=c++17",
                "-I",
                "${fileDirname}",
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${workspaceFolder}/out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}